<!DOCTYPE html>
<html>
  <head>
    <title>Taiwan Mandarin Chinese</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <!-- devise wants this -->
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <body>
    <div class="collector">
      <div class="left"></div>
      <div class="middle">
      <% if user_signed_in? %>
        <nav class="navbar navbar-default navbar-fixed-top">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <%= image_tag("seagull.png", size: "28x28") %>
              </button>
              <%= link_to image_tag("bear.svg", size: "70x50"), root_path %>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <li><%=link_to "Terms", terms_path %></li>
                <li><%=link_to "Lists", lists_path %></li>
                <!-- <li><%=link_to "Reading", reading_path %></li> -->
                <li><%=link_to "Stroke Order", stroke_order_path %></li>
                <li><%=link_to "Resources", resources_path %></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <li><%=link_to "Play", matching_game_path %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <%= current_user.email %>
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to('Log out', destroy_user_session_path, :method => :delete) %></li>
                  </ul>
                </li>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>

        <% else %>
          <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                  <span class="sr-only">Toggle navigation</span>
                  <%= image_tag("seagull.png", size: "28x28") %>
                </button>
                <%= link_to image_tag("bear.svg", size: "70x50"), root_path %>
              </div>

              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                  <li><%= link_to "Login", new_user_session_path %></li>
                  <li><%=link_to "Sign up", new_user_registration_path %></li>
                </ul>
              </div>
            </div>
          </nav>
        <% end %>
      <%= yield %>
      </div> <!-- middle  -->
      <div class="right"></div>
    </div> <!-- collector  -->
    <footer></footer>
  </body>
</html>
