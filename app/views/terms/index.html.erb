<p id="notice"><%= notice %></p>

<div class="collector">
  <h1>Terms</h1>
  <%= paginate @terms %>
  <p><%= page_entries_info @terms %></p>
</div>

<div class="table-responsive">
  <form method="post">
    <table class="table table-bordered table-condensed table-hover text-center">
      <thead>
        <tr>
          <th class="btn" type="submit" method="post">Add to List</button>
          <th class="text-center">English</th>
          <th class="text-center">Chinese Traditional</th>
          <th class="text-center">Chinese Simplified</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @terms.each do |term| %>
            <td><input type="checkbox" name="term_ids[]" value="term.id"></td>
            <td><%= term.english %></td>
            <td><%= term.chinese_traditional %></td>
            <td><%= term.chinese_simplified %></td>
            <td><%= link_to 'Show', term %></td>
            <td><%= link_to edit_term_path(term) do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% end %></td>
            <td><%= link_to term, method: :delete, data: { confirm: 'You really want to do this?' } do %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %></td>
          </tr>
        <% end %>
      </tbody>
    </form>
  </table>
</div>
<br>

<%= link_to 'New Term', new_term_path %>
